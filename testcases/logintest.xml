<?xml version="1.0" encoding="utf-8"?>
<test name="logintest" timeout="30" loop="-1" frequency="20">
	<sample 
	  id="login"
	  type="HTTP"
	  url="http://www.botwave.com/login"
	  timeout="30"
	  method="POST"
	  >
	  <data format="xml">
	  	<item name="name" value="jeff"/>
	  	<item name="password">password</item>
	  </data>
	  
	</sample>
	
	<assert type="eq">
		<item>${httpcode}</item>
		<item>200</item>
	</assert>
	
	<sample
	  id="valid"
	  type="SOAP"
	  wsdl="http://www.ooxx.com/ooxx?wsdl"
	  method="checkSSOLogin"
	  timeout="30"
	  >
	  <data format="json">
	  	<![CDATA[
	  	{"name":"jeff"}
	  	]]>
	  </data>
	 </sample>
	 
	 <assert type="eq">
	 	<item></item>
	 </assert>
</test>